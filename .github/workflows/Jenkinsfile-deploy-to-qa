pipeline {
    agent any

    stages {
        stage('Checkout Develop') {
            steps {
                git branch: 'develop', url: 'https://github.com/Cutber/DemoWeb.git'
            }
        }

        stage('Merge Develop into QA') {
            steps {
                script {
                    bat '''
                    echo "⏳ Cambiando a la rama QA..."
                    git checkout qa

                    echo "🔄 Haciendo pull de QA..."
                    git pull origin qa --ff-only

                    echo "🔁 Fusionando cambios desde Develop..."
                    git merge origin/develop --no-edit

                    echo "⬆️ Subiendo cambios a QA..."
                    git push origin qa
                    '''
                }
            }
        }

        stage('Deploy to QA') {
            steps {
                echo '🚀 Desplegando en QA...'
            }
        }
    }
}
