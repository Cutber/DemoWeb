name: Ant Build 

on:
  workflow_dispatch: 
  pull_request:
    branches:
      - develop  
      - qa_split
  push:
    paths-ignore:     
      - '.github/**'
      - '*.md'
    branches: 
      - develop
      - qa_split
      - qa
      - main

jobs:
  deploy_develop:
    if: github.ref == 'refs/heads/develop'
    runs-on: ubuntu-latest
    steps:
      - name: Checkout código fuente
        uses: actions/checkout@v4

      - name: Aplicando CI develop
        run: echo "Configurando entorno para develop"

      - name: Ejecutar despliegue
        run: echo "Realizando integración continua sobre entorno de develop"

  deploy_qa_split:
    if: github.ref == 'refs/heads/qa_split'
    runs-on: ubuntu-latest
    steps:
      - name: Checkout código fuente
        uses: actions/checkout@v4

      - name: Aplicando CI qa_split
        run: echo "Configurando entorno para qa_split"

      - name: Ejecutar despliegue
        run: echo "Realizando integración continua sobre entorno de qa_split"

  deploy_qa:
    if: github.ref == 'refs/heads/qa'
    runs-on: ubuntu-latest
    steps:
      - name: Checkout código fuente
        uses: actions/checkout@v4

      - name: Aplicando CI qa
        run: echo "Configurando entorno para qa"

      - name: Ejecutar despliegue
        run: echo "Realizando integración continua sobre entorno de qa"

  deploy_main:
    if: github.ref == 'refs/heads/main'
    runs-on: ubuntu-latest
    steps:
      - name: Checkout código fuente
        uses: actions/checkout@v4

      - name:  Aplicando CI main
        run: echo "Realizando integración continua sobre entorno de main"

      - name: Ejecutar despliegue
        run: echo "Dealizando integración continua sobre entorno de main"

